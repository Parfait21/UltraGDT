{% extends 'base.html.twig' %}

{% block title %}Images Produit{% endblock %}

{% block body %}   
    <div class="col-md-10 offset-md-1">
        <h1>Fichiers produits</h1>
        <button style="padding:7px 20px; border:none; background:#C70039; display: inline-block; border-radius:10px; padding:10px 15px 10px;">
            <a href="{{ path('app_saison_images', {'id': saison.id}) }}" style="text-decoration:none; color:#fff; font-size:16px;"><i class="fas fa-arrow-left"></i> Retour</a>
        </button>
        {% for label, messages in app.flashes() %}
            {% for message in messages %}
                <div class="alert alert-info" role="alert">
                    <i class="fa fa-warning" style="font-size: 20px;"></i>
                    <span class="text-info margin-left" style="margin: 0px;margin-left: 10px;">
                        {{ message }}
                    </span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position: relative; float: right;"></button>
                </div>
            {% endfor %}  
        {% endfor %}
        {% if imagesPull is not empty %}
        <div class="container" style="margin-bottom:15px;">
            <div class="row">
                {% for image in imagesPull %}
                    <div class="col">
                        <div class="box" style="width:250px; height:195px;margin-top:15px;">
                            <img src="{{ asset('uploads/brochures/' ~ image.file) }}" alt="Image">
                            <div class="box-layer"></div>
                            <div class="box-content">
                                <h5>{{ image.NomDossier }}</h5>
                                <p>Reference: {{ image.Reference }}</p>
                                <a class="read-more" href="#" data-image-src="{{ asset('uploads/brochures/' ~ image.file) }}" style="text-decoration:none;">Details&nbsp;</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
            <p>Aucune image PULL disponible pour cette saison.</p>
        {% endif %}
    </div>

    <div id="background-image" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7); z-index: 9999;">
        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
            <img id="modal-image" src="" alt="Image en grand" style="width: 1000px; height: 630px;">
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.read-more').click(function(event) {
                event.preventDefault();
                var imageUrl = $(this).data('image-src');
                $('#modal-image').attr('src', imageUrl);
                $('#background-image').show();
            });

            $('#background-image').click(function() {
                $(this).hide();
            });
        });
    </script>
{% endblock %}
