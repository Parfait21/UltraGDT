{% extends 'base.html.twig' %}

{% block title %}Images de la saison {{ saison.id }}{% endblock %}

{% block body %}   
    <div class="col-md-10 offset-md-1">
        <h1>Fichiers de la saison {{ saison.id }}</h1>
        <div class="panel panel-default panel-table">
        <div style="margin-bottom:10px;">
            <div style="padding:10px; background:#FFC300; width:250px; text-align:center; border-radius:10px; display: inline-block;">
                <a href="{{ path('app_dossier_ajout') }}" style="text-decoration:none; font-size:16px; font-weight: 600; color:#fff;">
                    <em class="fa fa-plus fa-lg" style="margin-right:15px;"></em>
                    Ajouter un fichier
                </a>
            </div>
            <button style="padding:7px 20px; border:none; background:#C70039; display: inline-block; border-radius:10px; padding:10px 15px 10px;">
                <a href="{{ path('app_client_saison', {'id': client.id}) }}" style="text-decoration:none; color:#fff; font-size:16px;">Retour</a>
            </button>
            <div style="margin-bottom: 10px; float: right;">
                <select onchange="location = this.value;" style="padding: 8px; font-size: 16px; border: 1px solid #ccc; border-radius: 5px; background-color: #f2f2f2; color: #333; cursor: pointer;">
                    <option value="" disabled selected style="display: none;">SÃ©lectionner une option</option>
                    <option value="{{ path('app_images_pull', {'client': client.id, 'saison': saison.id}) }}">PULL</option>
                    <option value="{{ path('app_images_plan', {'client': client.id, 'saison': saison.id}) }}">PLAN</option>
                </select>
            </div>
        </div>
        {% for label, messages in app.flashes() %}
            {% for message in messages %}
                <div class="alert alert-info" role="alert">
                    <i class="fa fa-warning" style="font-size: 20px;"></i>
                    <span class="text-info margin-left" style="margin: 0px;margin-left: 10px;">
                        {{ message }}
                    </span>
                    <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position: relative; float: right;"></button>
                </div>
            {% endfor %}  
        {% endfor %}
        {% if dossierTeches is not empty %}
        <div class="container" style="margin-bottom:15px;">
            <div class="row">
                {% for dossierTech in dossierTeches %}
                    <div class="col">
                        <div class="box" style="width:250px; height:195px;margin-top:15px;">
                            <img src="{{ asset('uploads/brochures/' ~ dossierTech.file) }}" alt="Image">
                            <div class="box-layer"></div>
                            <div class="box-content">
                                <h5>{{ dossierTech.NomDossier }}</h5>
                                <p>Reference: {{ dossierTech.Reference }}</p>
                                <a class="read-more" href="#" data-image-src="{{ asset('uploads/brochures/' ~ dossierTech.file) }}" style="text-decoration:none;">Details&nbsp;</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
        {% else %}
            <p>Aucune image disponible pour cette saison.</p>
        {% endif %}
    </div>

    <div id="background-image" style="display: none; position: fixed; top: 0; left: 0; width: 100%; height: 100%; background-color: rgba(0, 0, 0, 0.7); z-index: 9999;">
        <div style="position: absolute; top: 50%; left: 50%; transform: translate(-50%, -50%);">
            <img id="modal-image" src="" alt="Image en grand" style="width: 1100px; height: 650px;">
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.read-more').click(function(event) {
                event.preventDefault();
                var imageUrl = $(this).data('image-src');
                $('#modal-image').attr('src', imageUrl);
                $('#background-image').show();
            });

            $('#background-image').click(function() {
                $(this).hide();
            });
        });
    </script>
{% endblock %}
