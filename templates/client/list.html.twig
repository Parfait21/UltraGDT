{% extends 'base.html.twig' %}

{% block title %}Liste des clients{% endblock %}

{% block body %}

<div class="example-wrapper">
    {% for label, messages in app.flashes() %}
        {% for message in messages %}
            <div class="alert alert-info" role="alert">
                <i class="fa fa-warning" style="font-size: 20px;"></i>
                <span class="text-info margin-left" style="margin: 0px;margin-left: 10px;">
                    {{ message }}
                </span>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close" style="position: relative; float: right;"></button>
            </div>
        {% endfor %}  
    {% endfor %}

    <div class="container">
        <div class="row">
            <div class="col-md-10 offset-md-1">
            <h1>Liste des clients</h1>
                <div class="panel panel-default panel-table">
                    <div style="padding:10px; background:#FFC300; width:250px; text-align:center; margin-bottom:10px; border-radius:10px;">
                        <a href="{{ path('app_client_ajout') }}" style="text-decoration:none; font-size:16px; font-weight: 600; color:#fff;">
                            <em class="fa fa-plus fa-lg" style="margin-right:15px;"></em>
                             Ajouter un client
                        </a>
                    </div>
                    <div class="panel-body">
                        <table class="table table-striped table-bordered table-list" style="margin-bottom:10px;">
                            <thead>
                                <tr>
                                    <th><em class="fa fa-cog fa-lg"></em></th>
                                    <th class="hidden-xs">ID</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Saisons</th>
                                </tr> 
                            </thead>
                            <tbody>
                            {% for client in client %}
                                <tr>
                                    <td align="center">
                                        <a href="{{ path('app_client_edit', {'id':client.id}) }}"><em class="fa fa-pencil" style="margin-right:10px; color:green; cursor:pointer;"></em></a>
                                        <a href="{{ path('app_client_supprimer', {'id': client.id}) }}" onclick="return confirmDelete();">
                                            <em class="fa fa-trash" style="color:red;"></em>
                                        </a>

                                        <script>
                                            function confirmDelete() {
                                                return confirm("Êtes-vous sûr de vouloir supprimer ce client ?");
                                            }
                                        </script>
                                        
                                        </td>
                                    <td class="hidden-xs">{{ client.id }}</td>
                                    <td>{{ client.NomClient }}</td>
                                    <td>johndoe@example.com</td>
                                    <td align="center">
                                        <a href="{{ path('app_client_saison', {'id': client.id}) }}">
                                            <em class="fa fa-eye fa-lg"></em>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% endblock %}
